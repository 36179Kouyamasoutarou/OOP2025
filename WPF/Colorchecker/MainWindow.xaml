<Window x:Class="ColorChecker.MainWindow"
 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
 
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
 
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
 
        xmlns:local="clr-namespace:ColorChecker"
 
        mc:Ignorable="d"
 
        Title="MainWindow" Height="300" Width="700">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="colorArea" Margin="10" Background="Black"/>
        <Grid Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <!--ここから追加-->
            <TextBlock Grid.Row="0" Grid.Column="0" Text="Ｒ" FontSize="30" 
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Slider x:Name="rSlider" Grid.Row="0" Grid.Column="1" Maximum="255" 
                    VerticalAlignment="Center" ValueChanged="Slider_ValueChanged"/>
            <TextBox x:Name="rValue" Grid.Row="0" Grid.Column="2" VerticalAlignment="Center" FontSize="20"
                     Text="{Binding ElementName=rSlider,Path=Value,
                            UpdateSourceTrigger=PropertyChanged,StringFormat={}{0:0}}"/>
            <TextBlock Grid.Row="1" Grid.Column="0" Text="Ｇ" FontSize="30" 
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Slider x:Name="gSlider" Grid.Row="1" Grid.Column="1" Maximum="255" 
                    VerticalAlignment="Center" ValueChanged="Slider_ValueChanged"/>
            <TextBox x:Name="gValue" Grid.Row="1" Grid.Column="2" VerticalAlignment="Center" FontSize="20"
                     Text="{Binding ElementName=gSlider,Path=Value,
                            UpdateSourceTrigger=PropertyChanged,StringFormat={}{0:0}}"/>

            <TextBlock Grid.Row="2" Grid.Column="0" Text="Ｂ" FontSize="30" 
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Slider x:Name="bSlider" Grid.Row="2" Grid.Column="1" Maximum="255" 
                    VerticalAlignment="Center" ValueChanged="Slider_ValueChanged"/>
            <TextBox x:Name="bValue" Grid.Row="2" Grid.Column="2" VerticalAlignment="Center" FontSize="20"
                     Text="{Binding ElementName=bSlider,Path=Value,
                            UpdateSourceTrigger=PropertyChanged,StringFormat={}{0:0}}"/>
            <ComboBox x:Name="colorSelectComboBox" Grid.ColumnSpan="3" Grid.Row="3" ItemsSource="{Binding}" SelectedValue="{Binding Color}"
 
          Margin="20,0" Height="24" VerticalAlignment="Center" SelectionChanged="colorSelectComboBox_SelectionChanged">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <Border Width="20" Height="Auto" Margin="5,0" BorderThickness="1" BorderBrush="Black"  >
                                <Border.Background>
                                    <SolidColorBrush Color="{Binding Color}"/>
                                </Border.Background>
                            </Border>
                            <TextBlock Text="{Binding Name}"></TextBlock>
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>


        </Grid>
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="5*"/>
            </Grid.RowDefinitions>

            <Button x:Name="stockButton" Content="STOCK" Grid.Row="0" Margin="10" FontSize="16" Click="stockButton_Click"/>
            <!--ここから追加-->
            <ListBox x:Name="stockedColorsListBox" Margin="10,47,10,10" Grid.RowSpan="2" SelectionChanged="stockedColorsListBox_SelectionChanged"/>

        </Grid>
    </Grid>
</Window>
 